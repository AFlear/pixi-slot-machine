{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "strict": false,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["build", "node_modules"]
}
